{
"compilerOptions": {
"target": "ES2020",
"module": "CommonJS",
"esModuleInterop": true,
"moduleResolution": "Node",
"resolveJsonModule": true,
"outDir": "dist",
"rootDir": "src",
"strict": true,
"skipLibCheck": true,
"paths": {
"@superseller/ai/prompts/*": ["../../packages/ai/dist/prompts/*"]
}
},
"include": ["src"],
"exclude": [
  "src/**/__tests__/**",
  "src/**/*.test.ts",
  "src/**/*.spec.ts"
]
}
