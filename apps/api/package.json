    "db:up": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "prisma": "^6.19.0",
    "tsx": "^4.20.6"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0"
  }
}
