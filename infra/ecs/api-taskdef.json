{
  "family": "superseller-api",
  "networkMode": "awsvpc",
  "cpu": "512",
  "memory": "1024",
  "requiresCompatibilities": ["FARGATE"],
  "taskRoleArn": "arn:aws:iam::234642166969:role/superseller-task-role",
  "executionRoleArn": "arn:aws:iam::234642166969:role/superseller-ecs-execution-role",
  "containerDefinitions": [
    {
      "name": "api",
      "image": "234642166969.dkr.ecr.us-east-2.amazonaws.com/superseller/api:latest",
      "portMappings": [{ "containerPort": 3001, "protocol": "tcp" }],
      "essential": true,
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3001" }
      ],
      "secrets": [
  {
    "name": "DB_SSELLERIA",
    "valueFrom": "arn:aws:secretsmanager:us-east-2:234642166969:secret:prod/DB_SSELLERIA-WUfCbz"
  },
  {
    "name": "JWT_SECRET",
    "valueFrom": "arn:aws:secretsmanager:us-east-2:234642166969:secret:prod/JWT_SECRET-m3RyMM"
  },
  {
    "name": "ML_APP_ID",
    "valueFrom": "arn:aws:secretsmanager:us-east-2:234642166969:secret:prod/ML_APP_ID-2LEWTa"
  },
  {
    "name": "ML_APP_SECRET",
    "valueFrom": "arn:aws:secretsmanager:us-east-2:234642166969:secret:prod/ML_APP_SECRET-Centpx"
  },
  {
    "name": "ML_REDIRECT_URI",
    "valueFrom": "arn:aws:secretsmanager:us-east-2:234642166969:secret:prod/ML_REDIRECT_URI-lrPk9C"
  },
  {
    "name": "SHOPEE_CLIENT_ID",
    "valueFrom": "arn:aws:secretsmanager:us-east-2:234642166969:secret:prod/SHOPEE_CLIENT_ID-HeGSSP"
  },
  {
    "name": "SHOPEE_CLIENT_SECRET",
    "valueFrom": "arn:aws:secretsmanager:us-east-2:234642166969:secret:prod/SHOPEE_CLIENT_SECRET-TXPlBs"
  },
  {
    "name": "SHOPEE_REDIRECT_URI",
    "valueFrom": "arn:aws:secretsmanager:us-east-2:234642166969:secret:prod/SHOPEE_REDIRECT_URI-6cCu0H"
  }
],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/superseller-api",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -fsS http://localhost:3001/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 15
      }
    }
  ]
}
